// Cambia esto a "false" cuando quieras liberar la página
const bloqueado = true; 


import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTags, getPostsByTag, sortItemsByDateDesc } from '../../utils/data-utils';

const posts = (await getCollection('blog')).sort(sortItemsByDateDesc);
const tags = getAllTags(posts).sort((tagA, tagB) => {
    const postCountTagA = getPostsByTag(posts, tagA.id).length;
    const postCountTagB = getPostsByTag(posts, tagB.id).length;
    return postCountTagB - postCountTagA;
});
---


---
// Cambia esto a "false" cuando quieras liberar la página
const bloqueado = true; 
---

<BaseLayout>
  {bloqueado ? (
    <div id="maintenance-mode">
        <div class="maintenance-container">
            <div class="gear-wrapper">
                <div class="gear"></div>
                <div class="gear-inner"></div>
            </div>
            <h1 class="maintenance-title">Página en construcción</h1>
            <p class="maintenance-subtitle">Estamos ajustando los últimos detalles. ¡Vuelve pronto!</p>
            
            <div class="mt-8">
                <a href="/" class="btn-back">
                    Volver al inicio
                </a>
            </div>
        </div>
    </div>
  ) : (
    <article>
        <h1>Mi Contenido Real</h1>
        <p>Toda tu investigación y fotos aquí.</p>
    </article>
  )}
</BaseLayout>

<style>
    /* CONTENEDOR PRINCIPAL */
    #maintenance-mode {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #ffffff;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .maintenance-container {
        padding: 20px;
    }

    .maintenance-title {
        font-family: serif;
        font-size: 2.5rem;
        font-style: italic;
        margin-top: 2rem;
        color: #1a1a1a;
    }

    .maintenance-subtitle {
        color: #666;
        margin-top: 0.5rem;
        margin-bottom: 2rem;
    }

    /* ENGRANAJE */
    .gear-wrapper {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto;
    }

    .gear {
        width: 80px;
        height: 80px;
        background: #333;
        border-radius: 50%;
        position: absolute;
        top: 10px;
        left: 10px;
        animation: spin 4s linear infinite;
    }

    /* Dientes del engranaje */
    .gear::after, .gear::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100px;
        height: 20px;
        background: #333;
    }
    .gear::after { transform: translate(-50%, -50%) rotate(90deg); }
    
    /* El hueco central (CORREGIDO: ahora está contenido en el gear-wrapper) */
    .gear-inner {
        position: absolute;
        width: 30px;
        height: 30px;
        background: white; /* Color del fondo para que parezca un hueco */
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
    }

    /* BOTÓN */
    .btn-back {
        display: inline-block;
        padding: 12px 28px;
        background-color: #1a1a1a;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background-color: #444;
        transform: translateY(-2px);
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>