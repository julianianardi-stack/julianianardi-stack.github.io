---
type Props = { date: Date | string | undefined }; // Aceptamos m√°s tipos por seguridad

const { date } = Astro.props;

// Convertimos a objeto Date de forma segura
const validDate = date instanceof Date ? date : new Date(date || "");
const isValid = !isNaN(validDate.getTime());
---

{isValid ? (
    <time datetime={validDate.toISOString()}>
        {validDate.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })}
    </time>
) : (
    <span>Sin fecha</span> 
)}