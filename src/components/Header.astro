---
import siteConfig from '../data/site-config';
import CustomImage from './CustomImage.astro';

// Volvemos a un negro s√≥lido (text-theme-foreground) y mantenemos la letra fina
const titleClass = 'text-theme-foreground font-serif text-lg leading-tight font-light sm:text-xl';
---

<header class="mx-auto -mt-5 mb-8 flex w-full max-w-3xl items-center justify-start gap-3 sm:mb-12">
    {
        siteConfig.avatar?.src && (
            <a href="/">
                <CustomImage
                    class="aspect-square w-10 rounded-full object-cover sm:w-12"
                    {...siteConfig.avatar}
                    loading="eager"
                    fetchpriority="high"
                    width={48}
                    height={48}
                    widths={[48, 96]}
                    sizes="48px"
                />
            </a>
        )
    }
    <div class="grow text-left">
        {
            siteConfig.avatar?.src ? (
                <p class={titleClass}>{siteConfig.title}</p>
            ) : (
                <a class={titleClass} href="/">
                    {siteConfig.title}
                </a>
            )
        }
        {siteConfig.subtitle && <p class="text-xs leading-tight font-medium text-theme-foreground">{siteConfig.subtitle}</p>}
    </div>
</header>
